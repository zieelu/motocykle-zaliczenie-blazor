        <button class="arrow" @onclick="ShowNext">&#8594;</button>
    </div>
</div>

<div class="footer">Tomasz Zieliński 122921 Łódź 2025</div>

@code {
    private int currentIndex = 0;

    private string[] images = new[]
    {
        "images/afryka01.jpg",
        "images/afryka02.jpg",
        "images/afryka03.jpg"
    };

    private async Task ShowNext()
    {
        currentIndex = (currentIndex + 1) % images.Length;
        await UpdateImage();
    }

    private async Task ShowPrevious()
    {
        currentIndex = (currentIndex - 1 + images.Length) % images.Length;
        await UpdateImage();
    }

    private async Task UpdateImage()
    {
        await JS.InvokeVoidAsync("updateSliderImage", images[currentIndex]);
    }

    [Inject] private IJSRuntime JS { get; set; }
}